<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appdevmodule.peelo.cathal.androidca1.AddJourneyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/editTextStartLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter start latitude" />
        <EditText
            android:id="@+id/editTextStartLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter start longitude" />
        <EditText
            android:id="@+id/editTextEndLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter end latitude" />
        <EditText
            android:id="@+id/editTextEndLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter end longitude" />
        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:padding="4dp"
            android:hint="Enter date" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#000000"/>
        <Button
            android:id="@+id/addPicsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Pics" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Confirm Journey Details"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
